<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Your Cart</title>
  <link rel="stylesheet" href="cart.css">
</head>
<body>
      <header>
    <div class="nav-left">
      <a href="/index">Home</a>
      <a href="/products">Products</a>
      <a href="/faq">FAQ</a>
    </div>

    <div class="search-container">
      <input type="text" placeholder="Search for Item">
      <img src="search-icon.svg">
    </div>

    <a href="/cart" class="cart-button" title="View Cart">
      <img src="shoppingcart.svg" alt="Cart">
    </a>
  </header>
  <h2>Your Cart</h2>

  <% if (p.length > 0) { %>
    <table>
      <thead>
        <tr>
          <th>Product</th>
          <th>Price (₹)</th>
          <th>Quantity</th>
          <th>Total (₹)</th>
        </tr>
      </thead>
      <tbody>
        <% 
          let grandTotal = 0;
          let totalQuantity = 0;
          p.forEach(product => {
            const total = product.price * product.stock;
            grandTotal += total;
            totalQuantity += Number(product.stock);
        %>
          <tr>
            <td><%= product.name %></td>
            <td>₹<%= product.price %></td>
            <td><%= product.stock %></td>
            <td>₹<%= total %></td>
          </tr>
        <% }) %>

        <tr class="total-row">
          <td colspan="2">Grand Total</td>
          <td><%= totalQuantity %></td>
          <td>₹<%= grandTotal %></td>
        </tr>
      </tbody>
    </table>

    <form action="/buy" method="POST">
      <button class="buy-button" type="submit">Buy Now</button>
    </form>
  
  <% } else { %>
    <div class="empty">Your cart is empty.</div>
  <% } %>
</body>
</html>
